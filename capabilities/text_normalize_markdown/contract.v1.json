{
  "name": "text.normalize_markdown",
  "description": "Normalize Markdown content with optional whitespace cleanup.",
  "version": "v1",
  "annotations": {
    "title": "Normalize Markdown",
    "readOnlyHint": true,
    "idempotentHint": true
  },
  "input_schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "text": {
        "type": "string",
        "description": "Markdown text to normalize."
      },
      "options": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "trim_trailing_whitespace": {
            "type": "boolean",
            "default": true
          },
          "ensure_final_newline": {
            "type": "boolean",
            "default": true
          }
        },
        "default": {}
      }
    },
    "required": [
      "text"
    ]
  },
  "output_schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "text": {
        "type": "string"
      },
      "changes": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "default": []
      }
    },
    "required": [
      "text",
      "changes"
    ]
  },
  "errors": [
    {
      "code": "validation_error",
      "description": "Input did not match schema."
    },
    {
      "code": "output_validation_error",
      "description": "Output did not match schema."
    }
  ],
  "side_effects": "None.",
  "version_notes": "v1 initial normalization support."
}
