{
  "name": "infra.deploy_stack",
  "description": "Deploy a static stack locally. Resolves stack name to /opt/{stack} and runs docker compose pull && up -d.",
  "version": "v1",
  "annotations": {
    "title": "Deploy Stack",
    "destructiveHint": true
  },
  "input_schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "stack": {
        "type": "string",
        "description": "Repo/stack name. Resolves to /opt/{stack} on the host."
      },
      "services": {
        "type": ["array", "null"],
        "description": "Specific services to deploy. If null or empty, all services are targeted.",
        "items": { "type": "string" },
        "default": null
      },
      "pull_only": {
        "type": "boolean",
        "description": "Only pull images, don't start services.",
        "default": false
      },
      "dry_run": {
        "type": "boolean",
        "description": "Preview command without executing.",
        "default": false
      },
      "base_dir": {
        "type": "string",
        "description": "Base directory on the host.",
        "default": "/opt"
      }
    },
    "required": ["stack"]
  },
  "output_schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "stack": { "type": "string" },
      "compose_dir": { "type": "string" },
      "services": {
        "type": "array",
        "items": { "type": "string" }
      },
      "action": { "type": "string" },
      "exit_code": { "type": "integer" },
      "command": {
        "type": "string",
        "description": "Shell command preview (dry_run only)."
      },
      "error": { "type": "string" }
    },
    "required": ["stack", "compose_dir", "services", "action"]
  },
  "errors": [
    { "code": "dependency_error", "description": "docker not found in PATH." }
  ],
  "side_effects": "Pulls Docker images and optionally starts containers locally.",
  "version_notes": "v1 replaces infra.deploy_compose with convention-based stack naming."
}
